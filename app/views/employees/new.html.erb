<h2>Create New Employee</h2>

<% if @employee.errors.any? %>
    <% @employee.errors.full_messages.each do |msg| %>
        <div><%= msg %></div>
    <% end %>
<% end %>

<%= form_for @employee do |f| %>
    <div>
        <%= f.label :first_name %>
        <%= f.text_field :first_name %>
    </div>
    <div>
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
    </div>
    <div>
        <%= f.label :alias %>
        <%= f.text_field :alias %>
    </div>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :office %>
        <%= f.text_field :office %>
    </div>
    <div>
        <%= f.label :img_url %>
        <%= f.text_field :img_url %>
    </div>
    <div>
        <%= f.collection_select :dog_id, @dogs, :id, :name %>
    </div>
    <%= f.submit %>
<% end %>